generator client {
  provider        = "prisma-client-js"
  output          = "../app/generated/prisma"
  previewFeatures = ["fullTextSearchPostgres", "prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  username     String @unique
  firstName    String
  lastName     String
  displayName  String
  email        String @unique
  passwordHash String

  @@map("users")
}
